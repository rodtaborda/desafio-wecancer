<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rodrigotaborda.desafiowecancer.Fragmentos.FilmesFavoritosFragment"
    android:background="@color/colorBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/textViewFilmeFav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/favorite_movies_list"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorText"/>


<android.support.v7.widget.RecyclerView
    android:id="@+id/recyclerViewFilmesFavoritos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/textViewFilmeFav"
    android:layout_marginTop="20dp">

</android.support.v7.widget.RecyclerView>
</RelativeLayout>
